<Page x:Class="Terminalapp.Vibor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Terminalapp"
      mc:Ignorable="d" Background="white"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Vibor">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Grid.Column="1" x:Name="btnPogruzka" Content="Погрузка" VerticalAlignment="Center" HorizontalAlignment="Center" Width="160" Height="225" Click="btnPogruzka_Click"/>
        <Button Grid.Row="1" Grid.Column="3" x:Name="btnRazgruzka" Content="Разгрузка" VerticalAlignment="Center" HorizontalAlignment="Center" Width="160" Height="225" Click="btnRazgruzka_Click"/>
        <Frame x:Name="FrameVibor" Grid.Row="1" NavigationUIVisibility="Hidden" ContentRendered="FrameVibor_ContentRendered"/>
    </Grid>
</Page>
